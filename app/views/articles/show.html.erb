
<h2 align="center">    Title: <%= @article.title%></h2>
<div class="card bg-light col-sm-8 offset-sm-2">
    <h4 class="center"><strong>Description:</strong></h4>
    <hr>
<%=simple_format(@article.description)%>
<div class="article-actions">
<%= link_to "Edit this article", edit_article_path(@article), class: "btn btn-sm btn-primary"%>    
<%= link_to "Delete this article", article_path(@article),method: :delete,data: {confirm:"Are you really want to delete?"}, class: "btn btn-sm btn-danger"%>    
<%= link_to "Back to articles Listing", articles_path,class: "btn btn-sm btn-success"%>
</div>


</div>
     


