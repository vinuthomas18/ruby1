<div class="container">
<%= render 'shared/errors',obj: @article%>    
<div class="row">
    <div class="col-md-12">
<%= form_for @article do |f| %>
    <div class="form-group row">
        <div class="control-label col-sm-2">
        <%=f.label :title %>
        </div>
         <div class="col-sm-8">
        <%=f.text_field :title,class:"form-control",placeholder:"Titile of article",autofocous:true %>
   </div>
  </div>
    
   <div class="form-group row">
       <div class="control-label col-sm-2">
        <%=f.label :description %>
       </div>
         <div class="col-sm-8">
        <%=f.text_area :description,rows:10,class:"form-control",placeholder:"Body of article",autofocous:true %>
    </div>
  </div>
    <div class="form-group row">
        
        <div class="offset-sm-5 col-sm-4">
        <%=f.submit class:"btn btn-primary btn-lg" %>
   </div>      
   </div>
    
    <%end%>
    
    <center>[<%= link_to "Cancel request and return to articles Listing", articles_path%>
    ]</center>
    </div>
    </div>
    </div>