<% if obj.errors.any? %>
    <div class="row">
        <div class="col-sm-8 offset-sm-2">
            <div class="card text-white bg-dark mb-3">
                <div class="card-header">
                    <h2 class="card-title">
                        <%=pluralize(obj.errors.count,"errors")%>
                        Prohibits this article from being saved:
                    </h2>
                
                    <div class="card-body">
                            <ul>
                                <% obj.errors.full_messages.each do |msg| %>
                                <li>
                                    <%= msg %>
                                </li>
                            <% end %>
                        </ul>            
                    
                    </div>
                </div>
                
            </div>
            
        </div>
        
    </div>
    
<% end %>